@model Bar.Models.Account.UserViewModel
@{
    var url = "";
    if (Model.Id == "0")
    {
        url = Url.Action("UserAdd");
    }
    else
    {
        url = Url.Action("UserEdit");
    }
}
<div class="modal fade" id="add-korisnik" tabindex="-1" role="dialog" aria-labelledby="addKorisnikLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title" id="addKorisnikLabel">Korisnik</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-post="@url">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Username" class="font-weight-bold"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="font-weight-bold"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Korisnička uloga</label>
                        <select asp-for="RoleNaziv">
                            <option value="MasterUser">MasterUser</option>
                            <option value="RegularUser">RegularUser</option>
                        </select>
                        <span asp-validation-for="RoleNaziv" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Stara lozinka</label>
                        <input type="password" asp-for="OldPassword" class="form-control" placeholder="Ne popunjaji ukoliko se radi o dodavanju korisnika" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Spremi</button>
            </div>
        </div>
    </div>
</div>