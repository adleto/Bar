@model Bar.Models.Location
@{
    var url = "";
    if (Model.Id == 0)
    {
        url = Url.Action("LocationAdd");
    }
    else
    {
        url = Url.Action("LocationEdit");
    }
}
<div class="modal fade" id="add-item" tabindex="-1" role="dialog" aria-labelledby="addItemLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title" id="addItemLabel">Stol</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-post="@url">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label class="font-weight-bold">Opis</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label class="font-weight-bold">Boja</label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Spremi</button>
            </div>
        </div>
    </div>
</div>